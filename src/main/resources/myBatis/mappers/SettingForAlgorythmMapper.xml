<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.page_rank.interfaces.ISettingsForAlgorythmDAO">
    <resultMap id="settingForAlgorythmResultMap" type="com.solvd.page_rank.models.SettingsForAlgorythm">
        <id property="id" column="id" javaType="int"/>
        <result property="dempingFactor" column="demping_factor"/>
        <result property="limitOfDeflect" column="limit_of_deflect"/>
        <association property="user" column="user_id" javaType="com.solvd.page_rank.models.Users"
                     select="com.solvd.page_rank.interfaces.IUsersDAO.getEntity"/>
    </resultMap>

    <select id="getEntity" resultMap="settingForAlgorythmResultMap">
        SELECT * FROM settingforalgorythm WHERE id = #{id}
    </select>

    <delete id="deleteEntity" parameterType="com.solvd.page_rank.models.SettingsForAlgorythm">
        DELETE FROM settingforalgorythm WHERE id = #{id}
    </delete>

    <insert id="createEntity" useGeneratedKeys="true" keyProperty="id" parameterType="com.solvd.page_rank.models.SettingsForAlgorythm">
        INSERT INTO settingforalgorythm (demping_factor, limit_of_deflect, user_id)
        VALUES (#{dempingFactor}, #{limitOfDeflect}, #{user.id})
    </insert>

    <update id="updateEntity" parameterType="com.solvd.page_rank.models.SettingsForAlgorythm">
        UPDATE settingforalgorythm SET demping_factor = #{dempingFactor}, limit_of_deflect = #{limitOfDeflect},
        user_id = #{user.id}
        WHERE id = #{id}
    </update>

    <select id="getSettingsByUserID" resultMap="settingForAlgorythmResultMap">
        SELECT * FROM settingforalgorythm WHERE user_id = #{user.id}
    </select>
</mapper>