<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.page_rank.interfaces.IUsersDAO">
    <resultMap id="usersResultMap" type="com.solvd.page_rank.models.Users">
        <id property="id" column="id" javaType="int"/>
        <result property="login" column="login"/>
        <result property="password" column="password"/>
        <collection property="pagesToRanks" javaType="ArrayList" column="id"
                    ofType="com.solvd.page_rank.models.PagesToRank" select="getPagesToRank"/>
    </resultMap>

    <select id="getEntity" resultMap="usersResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="getUserByLogin" resultMap="usersResultMap">
        SELECT * FROM users WHERE login = #{login}
    </select>

    <select id="getPagesToRank" resultMap="usersResultMap">
        SELECT * FROM pagestorank WHERE user_id = #{id}
    </select>

    <delete id="deleteEntity" parameterType="com.solvd.page_rank.models.Users">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <insert id="createEntity" useGeneratedKeys="true" keyProperty="id" parameterType="com.solvd.page_rank.models.Users">
        INSERT INTO users (login, password) VALUES (#{login}, #{password})
    </insert>

    <update id="updateEntity" parameterType="com.solvd.page_rank.models.Users">
        UPDATE users SET login = #{login}, password = #{password}
        WHERE id = #{id}
    </update>

    <select id="getAllEntity" resultMap="usersResultMap">
        SELECT * FROM users
    </select>
</mapper>